{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
          "version": "detect" // React version. "detect" automatically picks the version you have installed.
        }
    },
    "rules": {
        "linebreak-style": "off",
        "no-console": "off",
        "react/prop-types": ["error", { "ignore": ["navigation", "color", "size"] }],
        "react/display-name": "off"
    }
}